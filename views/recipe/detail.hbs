  {{> header}}
  <div class="recipe-detail">
    <div class="flex-row">
      <h2>{{data.title}}</h2>
      <div class="flex-column">
        <div>Cooking time: {{data.readyInMinutes}}</div>
      </div>
    </div>
    <hr>
    <div class="flex-row">
      <img class="img-detail" src="{{data.image}}" alt="Recipe-image">
      <div><p id="para">{{data.summary}}</p></div>
    </div>
    <hr>
    {{#if user}}
    <div class="flex-column">
      <h4>ADD TO FAVOURITES</h4>
      <div>
        <div class="recipeIden" style="display:none;">{{data.id}}</div>
        <label class="switch">
          <input type="checkbox" class="addToFavourites">
          <span class="slider round"></span>
        </label>
      </div>
    </div>
    {{/if}}
  </div>
  <div class="popup">
    <div class="popup-content">
      <img class="closeImg" src="/images/close-icon-vector-23190083.jpg">
      <h3>Your feedback please</h3>
      <form>
        <label for="recipeId">Recipe Id</label>
        <input type="number" value={{data.id}} class="recipeId" readonly>
        <label for="title">Title</label>
        <input type="text" value={{data.title}} class="title" readonly>        
        <label for="rating">Rating </label>
        <select class="rating" name="rating">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
        </select>
        <textarea rows="3" cols="60" class="input comments" name="comments" placeholder="Enter your comments"></textarea>
        <button class="login-btn" type="button" id="reviewSubmit">Submit</button>
        <h3>Your review is valuable</h3>
      </form>
    </div>
  </div>
  <div class="recipe-detail2">
      <div><h4 style="display:inline-block;">Servings: {{data.servings}}</h4></div>
      <hr>
      <div><h4>Ingredients</h4></div>
      <ul>
        {{#each data.extendedIngredients}}
          <li>{{name}}</li>
        {{/each}}
      </ul>
      <hr>
      {{#if user}}

        <div><h4>Preparations</h4></div>
        {{#each data.analyzedInstructions}}
          {{#each steps}}
            <div class="grey-font">{{number}}. {{step}}</div>
          {{/each}}
        {{/each}}
        {{else}}
        <div><p>To see full instructions <a href="/auth/login">Login</a></p></div>
      {{/if}}  
      
  </div>
  <div class="recipe-detail">
    {{#if user}}
        <div style"text-align: center;">
          <button class="search-btn" id="writeReview">LEAVE A REVIEW</button>
        </div>  
        <hr>
        <div class="flex">
          <p>Show Reviews </p>
          <label class="switch">
            <input type="checkbox" class="showReview">
            <span class="slider round"></span>
          </label>
        </div>
      
        <div class="reviewContainer" >
            <h4>Reviews </h4>
            <div class="reviewList">
              {{#each reviews}}
                  {{#if userId}}
                      <div class="reviewItem">
                          <div class="rating">
                              <div class="rating-number" style="display:none">{{rating}}</div>
                              {{#if stars.[0]}}
                                <span class="fa fa-star checked"></span>
                              {{else}}
                                <span class="fa fa-star"></span>
                              {{/if}}
                              {{#if stars.[1]}}
                                <span class="fa fa-star checked"></span>
                              {{else}}
                                <span class="fa fa-star"></span>
                              {{/if}}
                              {{#if stars.[2]}}
                                <span class="fa fa-star checked"></span>
                              {{else}}
                                <span class="fa fa-star"></span>
                              {{/if}}
                              {{#if stars.[3]}}
                                <span class="fa fa-star checked"></span>
                              {{else}}
                                <span class="fa fa-star"></span>
                              {{/if}}
                              {{#if stars.[4]}}
                                <span class="fa fa-star checked"></span>
                              {{else}}
                                <span class="fa fa-star"></span>
                              {{/if}}
                          </div>
                          {{#if firstname}}
                          <div>{{firstname}}</div>
                          {{else}}
                          <div>Anonymous</div>
                          {{/if}}
                          <div>{{comments}}</div>
                          <hr>
                      </div>
                  {{/if}}              
              {{/each}}
            </div>
        </div>
      {{/if}}
  </div>
  
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <script src="/javascripts/script1.js"></script>
  <script src="/javascripts/review.js"></script>

